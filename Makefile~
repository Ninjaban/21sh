SRC			=	match.c \
				ft_completion.c \
				ft_read.c \
				ft_history.c \
				ft_init.c \
				ft_gestion_error.c \
				ft_path.c \
				ft_varenv.c \
				ft_delchar.c \
				ft_sys.c \
				ft_setenv.c \
				ft_chdir_tools.c \
				ft_prompt_path.c \
				ft_prompt.c \
